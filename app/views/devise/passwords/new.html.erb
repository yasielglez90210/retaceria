<div class="login-box">
  <div class="login-logo">
    <h3>¿Olvidó su contraseña?</h3>
  </div>
  <div class="login-box-body">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
        <div class="form-group has-feedback">
          <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "off" %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>

            <%= f.submit "Enviarme instrucciones al correo", class: 'btn btn-block btn-primary btn-flat' %>

    <% end %>
    <br>
    <%= link_to "Iniciar sesión", new_session_path(resource_name) %>

  </div>
  <!-- /.login-box-body -->
</div>