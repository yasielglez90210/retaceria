<div class="box">
  <div class="box-header"></div>
  <!-- /.box-header -->
  <div class="box-body table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th style="width: 10px">#</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1%>.</td>
          <td><%= category.name %></td>
          <td><%= link_to 'Ver', category %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <td><%= link_to 'Eliminar', category, method: :delete, data: {confirm: '¿Esta seguro que desea eliminar la Categoría?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.box-body -->
</div>

