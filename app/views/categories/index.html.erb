<%= render 'partials/content_header', back: true,backPath:library_index_path ,title: @title,add:1,text:'Nueva categoría',path_action: new_category_path %>
<section class="content">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-body table-responsive">
      <table id="dttb" class="table responsive nowrap table-hover" data-source="<%= categories_path(format: :json) %>">
        <thead>
        <tr>
          <td>Categoria</td>
          <td></td>
          <td></td>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
    <div id="product-modal" class="modal fade"></div>
    <!-- /.box-body -->
  </div>
</section>


<% content_for :otherscripts do %>

    <script>
        $(document).ready(function() {
            $('#dttb').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": $('#dttb').data('source'),
                "pagingType": "full_numbers",
                "columns": [
                    {"data": "name"},
                    {"data": "edit_action","width":50},
                    {"data": "delete_action","width":50}
                ],
                "language": {
                    "lengthMenu": "Mostrar en bloques de  _MENU_  registros",
                    "zeroRecords": "No se he encontrado",
                    "info": "Mostrando página _PAGE_  de _PAGES_ pagina(s)",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros en total)",
                    "sSearch": "Buscar:",
                    "sProcessing":'Procesando...',
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sPrevious": "Anterior",
                        "sNext": "Siguiente",
                        "sLast": "Último"
                    }
                },
                "bSort": false,

            });
        });
    </script>
<% end %>

