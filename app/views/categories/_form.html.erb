<div class="box">
  <%= form_with(model: category, local: true, :html => {autocomplete: "off"}) do |form| %>
      <div class="box-body">

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= form.label :name, 'TÃ­tulo', class: 'col-sm-4 control-label ta-left' %>
              <%= form.text_field :name, id: :category_name, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="actions">
              <%= form.submit 'Guardar', class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
  <% end %>

  <% content_for :otherscripts do %>

      <% if category.errors.any? %>
          <script>
              <% category.errors.full_messages.each do |err| %>
              toastr.error('<%= err %>');
              <% end %>
          </script>
      <% end %>

  <% end %>
</div>