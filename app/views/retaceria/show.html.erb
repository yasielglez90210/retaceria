<%= render 'partials/content_header', back: true, backPath: retaceria_path, title: @retacerium.name, add: 0, text: '', path_action: @retacerium, item: 'el producto' %>
<section class="content">
  <div class="box">
    <!-- /.box-header -->
    <!-- form start -->
    <div class="box-body">
      <br>
      <div class="row form-horizontal">
        <div class="col-md-6">
          <div class="form-group">
            <div class="show-property">
              <label>
                <span class="show-key">Nombre:</span>
                <span class="show-value"><%= @retacerium.name %></span>
              </label>
            </div>
          </div>

          <div class="form-group">
            <div class="show-property">
              <label>
                <span class="show-key">Categoria:</span>
                <span class="show-value"><%= @retacerium.category.name %></span>
              </label>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <div class="show-property">
              <label>
                <span class="show-key">Costo:</span>
                <span class="show-value"><%= @retacerium.cost %></span>
              </label>
            </div>
          </div>
          <div class="form-group">
            <div class="show-property">
              <label>
                <span class="show-key">Rinde:</span>
                <span class="show-value"><%= @retacerium.rinde %> &nbsp; por mt.</span>
              </label>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <div class="show-property">
              <div class="box-body table-responsive no-padding">
                <table class="table table-hover ml--8" style="">
                  <thead>
                  <tr>
                    <th class="fs-16">Colores</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @retacerium.colors.each do |color| %>
                      <tr>
                        <td><%= color.name %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.box-body -->
  </div>
</section>


