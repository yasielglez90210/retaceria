<p id="notice"><%= notice %></p>

<h1>Product Merceria</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Article</th>
      <th>Cost</th>
      <th>Price</th>
      <th>Initial stock</th>
      <th>Minimum</th>
      <th>Current stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_merceria.each do |product_mercerium| %>
      <tr>
        <td><%= product_mercerium.name %></td>
        <td><%= product_mercerium.article %></td>
        <td><%= product_mercerium.cost %></td>
        <td><%= product_mercerium.price %></td>
        <td><%= product_mercerium.initial_stock %></td>
        <td><%= product_mercerium.minimum %></td>
        <td><%= product_mercerium.current_stock %></td>
        <td><%= link_to 'Show', product_mercerium %></td>
        <td><%= link_to 'Edit', edit_product_mercerium_path(product_mercerium) %></td>
        <td><%= link_to 'Destroy', product_mercerium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

